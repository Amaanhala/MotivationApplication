<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="_6002CEM_AmaanHala.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:_6002CEM_AmaanHala.View"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:DailyTaskListPage}"
        Route="DailyTaskListPage" />

    <ShellContent
        Title="Quotes"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Timer"
        ContentTemplate="{DataTemplate local:Timers}"
        Route="Timers" />
    <ShellContent
        Title="Quiet Places"
        ContentTemplate="{DataTemplate local:CafePage}"
        Route="CafePage" />
    <ShellContent
        Title="Music"
        ContentTemplate="{DataTemplate local:SongsPage}"
        Route="SongsPage" />
</Shell>
